<%= f.simple_fields_for :contents, @revision.content do |c| %>
  <fieldset>
    <div class="fieldset-help">
      <legend>Content</legend>
    </div>
    <div class="fieldset-fields">
      <%= c.input :text, label: false, as: :ckeditor, input_html: {toolbar: 'Full'} %>
    </div>
  </fieldset>
  <fieldset>
    <div class="fieldset-help">
      <legend>SEO</legend>
      <p class="hint">
        The excerpt and keywords will be included as &lt;meta&gt; description and keywords tags, useful for search engines.
      </p>
    </div>
    <div class="fieldset-fields">
      <%= c.input :excerpt, as: :text, label: 'Excerpt/Description', input_html: {rows: 3}, hint: "Describe in a short paragraph what this page is about." %>
      <%= c.input :keyword_list, label: 'Keywords', hint: "Comma-separated list of keywords, e.g. spiderman, superman, comics, superhero.", input_html: {class: 'js-token-input'} %>
    </div>
  </fieldset>
  <fieldset>
    <div class="fieldset-help">
      <legend>Featured Image</legend>
    </div>
    <div class="fieldset-fields">
      <%= choose_image_tag(c.object, target: 'revision_content_image', input: c.hidden_field(:image_id)) %>
    </div>
  </fieldset>
<% end -%>
<%= content_for :messages do %>
<%= render 'georgia/shared/messages', model: @message %>
<% end %>

<div class="row-fluid">
  <div class='span6'>
    <div class="hero-unit">
      <h1>Welcome to Georgia</h1>
      <p>The custom CMS that fits your needs. Manage all your content in one place. Slides, Widgets, Messages, Users, Blog and more!</p>
      <p>
        <%= link_to 'Learn more', 'http://www.georgiaonrails.com/help', class: 'btn btn-primary btn-large' %>
      </p>
    </div>

  </div>
  <div class="span6">

    <div class="well">
      <%= simple_form_for :message, html: {class: 'form-horizontal'} do |f| %>
      <fieldset class="max-length">
        <legend>Contact Support</legend>

        <div class='form-inputs'>
          <%= f.input :name %>
          <%= f.input :email %>
          <%= f.input :subject %>
          <%= f.input :message, as: :text, input_html: {rows: 5} %>
        </div>

        </fieldset>

        <div class="form-actions">
          <%= f.submit 'Send', class: 'btn btn-primary' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
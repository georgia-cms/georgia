<tr id='<%= dom_id(asset) %>' class='asset'>
  <td class='checkbox'>
    <%= check_box_tag :selected %>
  </td>
  <td class='thumbnail'>
    <%= link_to asset.url do %>
      <%= image_tag "georgia/content-types/#{asset.extension}.jpg", alt: asset.data_content_type if asset.data_content_type %>
    <% end %>
  </td>
  <td>
    <% asset.tag_list.each do |tag| %>
    <span class='tag'><%= tag %> <%= icon_tag 'remove' %></span>
    <% end -%>
    <%= link_to asset.filename, edit_media_path(asset) %>
  </td>
  <td class='small'>
    <%= number_to_human_size(asset.data_file_size) %>
  </td>
  <td class='small'></td> <%# dimensions %>
  <td class='tiny'></td> <%# featured tag %>
  <td class='timestamp'>
    <em><%= asset.updated_at.strftime('%F') %></em>
  </td>
</tr>
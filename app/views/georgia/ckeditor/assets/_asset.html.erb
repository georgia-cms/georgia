<tr id='<%= dom_id(asset) %>' class='asset'>
  <td class='checkbox-cell'>
    <%= checkboxable_tag asset %>
  </td>
  </td>
  <td class='thumbnail-cell'>
    <%= link_to asset_icon_tag(asset.extension), asset.url %>
    <%= icon_tag('paperclip') if asset.is_a?(Ckeditor::AttachmentFile) %>
  </td>
  <td>
    <%= facet_list_tag(asset.tag_list, :tg) %>
    <%= link_to asset.filename, edit_media_path(asset) %>
  </td>
  <td class='small'>
    <%= number_to_human_size(asset.data_file_size) %>
  </td>
  <td class='small'></td> <%# dimensions %>
  <td class='timestamp'>
    <em><%= asset.updated_at.strftime('%F') %></em>
  </td>
</tr>
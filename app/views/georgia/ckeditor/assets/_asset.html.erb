<tr id='<%= dom_id(asset) %>'>
  <td>
    <%= image_tag "georgia/content-types/#{asset.extension}.jpg", alt: 'asset.data_content_type' if asset.extension %>
  </td>
  <td>
    <%= asset.filename || asset.data.file.filename %>
  </td>
  <td>
    <%= asset.data.file.exists? ? number_to_human_size(asset.size) : 'File not found' %>
  </td>
  <td></td> <%# dimensions %>
  <td></td> <%# featured tag %>
  <td>
    <%= simple_form_for asset, url: media_path(asset), html: {class: 'form-vertical', data: {'asset-id' => asset.id}}, remote: true do |f| %>
    <%= f.input :tag_list, label: false, input_html: {class: 'input-large js-token-input', data: {load: asset.tags.map{|t| {id: t.id, text: t.name} }}} %>
    <% end %>
  </td>
  <td>
    <%= link_to "#{icon_tag('icon-trash')} Delete".html_safe, media_path(asset), method: :delete, data: {confirm: 'Are you sure you want to delete this asset?'}, remote: true, class: 'btn btn-danger' if can? :destroy, Ckeditor::Asset %>
  </td>
</tr>
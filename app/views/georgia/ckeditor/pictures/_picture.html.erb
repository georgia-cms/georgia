<tr id='<%= dom_id(picture) %>'>
  <td>
    <%= link_to image_tag(picture.url(:thumb), size: '65x49', title: (picture.filename || picture.data.file.filename)), picture.url_content, rel: 'shadowbox[gallery]' %>
  </td>
  <td>
    <%= picture.filename || picture.data.file.filename %>
  </td>
  <td>
    <%= number_to_human_size(picture.size) %>
  </td>
  <td>
    <%= picture.width %>x<%= picture.height %>
  </td>
  <td>
    <%= simple_form_for picture, url: media_path(picture), html: {class: 'form-vertical', data: {'picture-id' => picture.id}}, remote: true do |f| %>
    <%= f.input :tag_list, label: false, input_html: {class: 'input-large js-token-input', data: {load: picture.tags.map{|t| {id: t.id, text: t.name} }}} %>
    <% end %>
  </td>
  <td>
    <%= link_to "#{icon_tag('icon-trash')} Delete".html_safe, media_path(picture), method: :delete, data: {confirm: 'Are you sure you want to delete this picture?'}, remote: true, class: 'btn btn-danger' if can? :destroy, Ckeditor::Asset %>
  </td>
</tr>
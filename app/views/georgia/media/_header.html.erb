<header class='header-main'>
  <span class="btn-file-upload">
    <span class='btn-file-upload-text'>
      <%= icon_tag 'plus' %> Select files...
    </span>
    <input class='input-file-upload js-file-upload' type="file" name="assets[]" data-url="<%= media_index_path %>" multiple>
  </span>
  <%= form_for :download, url: download_media_index_path, method: :post, html: {style: 'display:inline;'} do |f| %>
    <%= hidden_field_tag "ids", nil, class: 'downloadable-ids' %>
    <%= content_tag :button, "#{icon_tag('download')} Download".html_safe, type: "submit", class: "btn-action js-download hide" %>
  <% end -%>
  <%= link_to "#{icon_tag('trash-o')} Delete".html_safe, '#', method: :delete, data: {confirm: "Are you sure you want to delete this picture?"}, remote: true, class: 'btn-delete js-delete hide' if can? :destroy, Ckeditor::Asset %>
</header>
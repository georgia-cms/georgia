<header class='header-main'>
  <div class="header-title">
    <%= link_to_back search_media_index_path if action_name == 'edit' %>
    <%= form_for :search, url: search_media_index_path, method: :get, html: {role: 'search'} do |f| %>
      <%= facets_inputs([:tg]) %>
      <%= hidden_field_tag :e, params[:e] if params[:e] %>
      <div class="input-group">
        <div class="input-group-btn">
          <button class="btn btn-default"><%= icon_tag('search') %></button>
        </div>
        <%= text_field_tag :query, params[:query], class: 'form-control input-search', placeholder: 'Search' %>
      </div>
    <% end -%>
  </div>
  <div class="header-actions">
    <span class="btn btn-primary btn-file-upload">
      <span class='btn-file-upload-text'>
        <%= icon_tag 'plus' %> Add files...
      </span>
      <input class='input-file-upload js-file-upload' type="file" name="assets[]" data-url="<%= media_index_path %>" multiple>
    </span>
  </div>
</header>

<%= content_for :footer do %>
  <%= render 'georgia/shared/modals/progress' %>
<% end -%>
<div class="well sidebar-nav">
  <ul class="nav nav-list">
    <% if @search %>
      <li class="nav-header">Extension</li>
      <% @search.facet(:extension).rows.each do |facet| %>
        <%= render partial: 'georgia/facets/facet', locals: {facet: facet, filter: :e} %>
      <% end -%>
      <li class="nav-header">Tags</li>
      <% @search.facet(:tags).rows.each do |facet| %>
        <%= render partial: 'georgia/facets/array_facet', locals: {facet: facet, filter: :tg, multiple: true} %>
      <% end -%>
    <% end -%>
  </ul>
</div>

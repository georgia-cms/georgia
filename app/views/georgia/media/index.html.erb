<h1 class='page-header'>Media Library</h1>

<div class='gal-holder'>
	<% @assets.each do |asset| %>
  <% if asset.data.file.exists? %>
	<%= content_tag(:div, id: dom_id(asset), class: "gal-item", :"data-url" => asset.url_content) do %>
	<%= link_to image_tag("/assets/ckeditor/filebrowser/images/gal_del.png", title: 'delete'),
	media_path(asset), method: :delete,
	data: {confirm: 'Are you sure you want to delete this picture?'},
	class: "fileupload-cancel gal-del" if can? :destroy, Ckeditor::Asset %>

	<div class="fileupload-file gal-inner-holder">
		<div class="img">
			<%= link_to image_tag(asset.url_thumb, title: asset.filename), asset.url_content, rel: 'lightbox' %>
		</div>
		<div class="img-data">
			<div class="img-name"><%= asset.filename %></div>
			<div class="time-size">
				<div class="time"><%= asset.format_created_at %></div>
				<div class="fileupload-size size"><%= number_to_human_size(asset.try(:size)) %></div>
			</div>
		</div>
	</div>

	<% end %>
  <% end %>
	<% end %>
</div>

<hr />

<%= simple_form_for @asset, url: media_index_url do |f| %>
<%= f.input :data, label: false %>
<%= f.button :submit, 'Add Picture' %>
<% end %>

<%= content_for :ujs do %>
	<script type="text/javascript">$("a[rel='lightbox']").lightBox()</script>
<% end -%>
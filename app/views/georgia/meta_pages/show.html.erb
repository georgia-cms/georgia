<%= content_for :messages do %>
<%= render 'georgia/shared/messages', model: @page %>
<% end %>

<h1 class="page-header">
  <div class="pull-right">
    <%= link_to "#{icon_tag 'icon-reply'} Back".html_safe, :back, class: 'btn' %>
    <% if @page.published? %>
      <%= link_to "Visit #{icon_tag 'icon-long-arrow-right'}".html_safe, @page.url, class: 'btn btn-info', target: '_blank' %>
      <%= link_to_unpublish @page, class: 'btn btn-warning' %>
    <% else -%>
      <%= link_to_publish @page, class: 'btn btn-success' %>
    <% end -%>
    <%= link_to_copy @page, class: 'btn btn-reverse' %>
    <%= link_to_delete @page, class: 'btn btn-danger' %>
  </div>
  <%= @page.status_tag(class: 'label-big') %>
  <%= @page.title %> <small><%= @page.url %></small>
</h1>

<div id='edit_page_panel'>
  <div class="row-fluid">
    <div class="span4">
      <div class="well">
        <h3>Drafts</h3>
          <% @page.drafts.find_each do |draft| %>
            <h5>
              <%= link_to 'edit', [:edit, draft], class: 'pull-right' %>
              <%= draft.title %> - <small>updated <%= time_ago_in_words draft.updated_at %></small>
            </h5>
          <% end -%>
        </ul>
        <%= link_to_draft @page %>
      </div>
    </div>
    <div class="span4">
      <div class="well">
        <h3>In Review</h3>
          <% @page.reviews.find_each do |review| %>
            <h5>
              <%= link_to 'show', review, class: 'pull-right' %>
              <%= review.title %> - <small>updated <%= time_ago_in_words review.updated_at %></small>
            </h5>
          <% end -%>
      </div>
    </div>
    <div class="span4">
      <div class="well">
        <h3>Revisions</h3>
          <% @page.revisions.find_each do |revision| %>
            <h5>
              <%= link_to 'show', revision, class: 'pull-right' %>
              <%= revision.title %> - <small>stored <%= time_ago_in_words revision.updated_at %></small>
            </h5>
          <% end -%>
      </div>
    </div>
  </div>
</div>
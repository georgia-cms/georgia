<%= content_for :ujs do %>
<%= render 'new' %>
<% end -%>

<h1 class="page-header">
  <div class="pull-right">
    <%= link_to "#{icon_tag('icon-plus-sign')} Add Page".html_safe, '#new_page', class: 'btn btn-primary', role: 'button', data: {toggle: 'modal'} %>
  </div>
  Pages
</h1>


<div class='row-fluid'>
  <div class='span6'>
    <%= paginate @pages %>
  </div>
  <div class='span6'>
    <div class="pull-right">
      <%= render 'georgia/shared/search/pages' %>
    </div>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <th>Title</th>
    <th>Template</th>
    <th>URL</th>
    <th>Status</th>
    <th></th>
  </thead>
  <tbody>
    <% if @pages and @pages.any? %>
    <%= render @pages %>
    <% else %>
    <tr>
      <td colspan="6">
        There are currently no pages. <%= link_to 'Create a new one', new_page_url %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @pages %>

<%= link_to "#{icon_tag('icon-plus-sign')} Add Page".html_safe, '#new_page', class: 'btn btn-primary', role: 'button', data: {toggle: 'modal'} %>
<h1 class="page-header">Pages</h1>

<%= paginate @pages %>

<table class="table table-hover">
  <thead>
  <th>Title</th>
  <th>Content</th>
  <th>URL</th>
  <th>Status</th>
  <th></th>
  </thead>
  <tbody>
    <% if @pages and @pages.any? %>
      <%= render @pages %>
    <% else %>
    <tr>
      <td colspan="6">
        There are currently no pages. <%= link_to 'Create a new one', new_page_url %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @pages %>

<%= link_to 'Add Page', new_page_url, :class => 'btn' %>
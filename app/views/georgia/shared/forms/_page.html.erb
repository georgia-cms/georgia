<div id='page_form' class="modal--small">
  <%= link_to_close %>
  <%= simple_form_for(@page, as: :page, remote: true, html: {class: 'form-horizontal'}) do |f| %>

    <div class="modal-header">
      <h3 class='modal-title'>New <%= instance_name.titleize %></h3>
    </div>

    <div class="modal-content">
      <%= f.input :title, label: false, placeholder: 'Title', input_html: {name: 'title'} %>
    </div>

    <div class="modal-footer">
      <%= button_to_save "#{icon_tag('check')} Create".html_safe %>
    </div>

  <% end %>
</div>
<%= simple_form_for(@admin, :html => {class: 'well form-horizontal'}) do |f| %>

  <fieldset>
    <legend>Register a new admin</legend>
    
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation, label: 'Confirm' %>
    
    <%= f.association :roles, as: :check_boxes %>
    
    <div class="form-actions">
      <%= f.submit nil, class: 'btn btn-primary' %>      
    </div>
  </fieldset>

<% end %>
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'well form-horizontal'}) do |f| %>

  <fieldset>
    <legend>Register a new user</legend>
    
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :password_confirmation, :label => 'Confirm' %>
    
    <%= f.association :roles, :as => :check_boxes %>
    
    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>      
    </div>
  </fieldset>

<% end %>
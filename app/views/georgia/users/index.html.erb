<h1 class="page-header">Users</h1>

<table class="table table-hover">
  <thead>
  <th>Email</th>
  <th>Created</th>
  <th>Roles</th>
  </thead>
  <tbody>
    <% if @users and @users.any? %>
      <%= render @users %>
    <% else %>
    <tr>
      <td colspan="6">
        There are currently no users.
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>

<%= link_to "#{icon_tag 'icon-plus-sign'} Add User".html_safe, new_user_path, class: 'btn btn-primary' %>
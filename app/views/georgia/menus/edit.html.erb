<%= simple_form_for @menu do |f| %>
  <header class='header-main'>
    <%= link_to_back menus_path %>
    <h1 class='header-title'><%= icon_tag 'link' %> <%= @menu.name %></h1>
    <div class="header-actions">
    </div>
  </header>

  <section class="body-main">
    <fieldset>
      <div class="fieldset-help">
        <legend>Links</legend>
        <p class='hint'>
          <%= link_to "#{icon_tag 'plus'} Add new".html_safe, '#', class: 'btn' %>
        </p>
      </div>
      <div class="fieldset-fields control-group">
        <% if @links and @links.any? %>
          <ol class="links js-nested-sortable">
            <% @links.each do |link| %>
              <%= link_portlet_tag(link) %>
            <% end -%>
          </ol>
        <% else %>
          <p>There are currently no navigation links. <%= link_to 'Create a new one', '#' %></p>
        <% end %>
      </div>
    </fieldset>

  </section>
<% end -%>
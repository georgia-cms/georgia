<h1 class="page-header">Navigation Menus</h1>

<table class="table table-hover">
  <thead>
  <th>Name</th>
  <th></th>
  <th></th>
  </thead>
  <tbody>
    <% if @menus and @menus.any? %>
    <% @menus.each do |menu| %>
      <tr>
        <td><%= menu.name %></td>
        <td class='actions'>
          <%= link_to "#{icon_tag 'pencil'} Edit".html_safe, [:edit, menu], class: 'btn' %>
        </td>
        <td>
          <%= link_to "#{icon_tag 'remove'} Destroy".html_safe, menu, class: 'btn btn-danger', method: :delete, confirm: 'Are you sure?' %>
        </td>
      </tr>
    <% end -%>
    <% else %>
    <tr>
      <td colspan="6">
        There are currently no navigation menus. <%= link_to 'Create a new one', new_menu_url %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @menus %>

<%= link_to "#{icon_tag 'plus-sign'} Add Menu".html_safe, new_menu_url, class: 'btn btn-primary' %>
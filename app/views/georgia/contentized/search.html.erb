<%= content_for :ujs do %>
<%= render 'georgia/contentized/new' %>
<% end -%>

<div class="row-fluid">
  <div class="span2">
    <%= render 'georgia/contentized/facets' %>
  </div>
  <div class="span10">

    <%= render 'georgia/contentized/header' %>

    <table class="table table-hover">
      <thead>
        <th class='nowrap'><%= sortable 'title' %></th>
        <th class='nowrap'><%= sortable 'template' %></th>
        <th class='nowrap'><%= sortable 'url', 'URL' %></th>
        <th class='nowrap'><%= sortable 'tags' %></th>
        <th class='nowrap'><%= sortable 'status_name', 'Status' %></th>
        <th></th>
      </thead>
      <tbody>
        <% if @contentable_instances and @contentable_instances.any? %>
        <%= render @contentable_instances %>
        <% else %>
        <tr>
          <td colspan="6">
            There are currently no results.
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @search.hits %>
  </div>
</div>
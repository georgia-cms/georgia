<div id='activity_<%= activity.id %>' class="activity media">
  <%= image_tag(avatar_url(activity.owner.try(:email)), alt: '', class: 'media-object pull-left') %>
  <div class="media-body">
    <h4 class="media-heading">
      <%= activity.owner.try(:name) || unknown_user_name %> has decline a review for <em><%= link_to activity.trackable.title, [:edit, activity.trackable] rescue '[deleted]' %></em>
    </h4>
    <p>
      <small>
        <time class='text-muted js-time-ago' datetime="<%= activity.created_at %>">
          About <%= time_ago_in_words(activity.created_at) %> ago
        </time>
      </small>
    </p>
  </div>
</div>
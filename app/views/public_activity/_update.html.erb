<div id='activity_<%= activity.id %>' class="activity media">
  <%= image_tag(avatar_url(activity.owner.try(:email)), alt: '', class: 'media-object pull-left') %>
  <div class="media-body">
    <h4 class="media-heading">
      <%= activity.owner.try(:name) || unknown_user_name %> has updated <em>
      <% if activity.trackable.try(:revisionable) %>
        <%= link_to activity.trackable.title, [activity.trackable.revisionable, activity.trackable] rescue '[deleted]' %></em>
      <% else %>
        <%= link_to activity.trackable.title, activity.trackable rescue '[deleted]' %></em>
      <% end %>
    </h4>
    <p>
      <small>
        <time class='text-muted js-time-ago' datetime="<%= activity.created_at %>">
          About <%= time_ago_in_words(activity.created_at) %> ago
        </time>
      </small>
    </p>
  </div>
</div>
<header class="main-header">
  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container-fluid">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>

        <%= link_to image_tag('georgia/logo.png', alt: ''), main_app.root_url, class: 'brand' %>

        <div class="nav-collapse">
          <% if signed_in? %>
          <ul class="nav">

            <% if can? :manage, Georgia::Page %>
            <li class="dropdown<%= ' active' if controller_name == 'pages' %>">
              <%= link_to "Pages", georgia.search_meta_pages_url %>
            </li>
            <% end -%>

            <% if can? :manage, Georgia::Message %>
            <li class="dropdown<%= ' active' if controller_name == 'messages' %>">
              <%= link_to "Messages", georgia.messages_url %>
            </li>
            <% end -%>

            <% if can? :manage, Georgia::Menu %>
            <li class="dropdown<%= ' active' if controller_name == 'menus' %>">
              <%= link_to "Menus", georgia.menus_url %>
            </li>
            <% end -%>

            <% if can? :manage, Ckeditor::Asset %>
            <li class="dropdown<%= ' active' if controller_name == 'media' %>">
              <%= link_to "Media", georgia.media_index_url %>
            </li>
            <% end -%>

            <% Georgia.header.each do |partial| %>
            <%= render(partial: "georgia/header/#{partial}") %>
            <% end -%>

          </ul>
          <% end %>
          <ul class="nav pull-right">

            <% if can? :manage, Georgia::User %>
            <li class="dropdown<%= ' active' if controller_name == 'users' %>">
              <%= link_to "Users", georgia.users_url %>
            </li>
            <% end -%>

            <% if signed_in? %>
            <li class="dropdown">
              <%= link_to "#{current_user.email} <b class='caret'></b>".html_safe, '', class: 'dropdown-toggle', 'data-toggle' => 'dropdown' %>
              <ul class="dropdown-menu">
                <li><%= link_to "Sign out", georgia.destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
            <% end %>
          </ul>

        </div>
      </div>
    </div>
  </div>
</header>

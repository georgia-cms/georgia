<div class='btn-group'>
  <%= link_to "#{link.try(:title)} <span class='caret'></span>".html_safe, '#', class: 'btn dropdown-toggle', data: {toggle: 'dropdown'} %>
  <ul class="dropdown-menu">
    <% Georgia::PageDecorator.decorate(link.page.children.published).each do |child| %>
    <li><%= link_to child.try(:title), url_for(child.url) if child.published? %></li>
    <% end -%>
    <li class='divider'></li>
    <li><%= link_to 'Browse All', url_for(link.text) %></li>
  </ul>
</div>
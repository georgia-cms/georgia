<% if @slide.isNew(): %>
	<legend>Add a Slide</legend>
<% else: %>
	<legend>Update Slide</legend>
<% end %>
<div id='contents_panel'></div>
<div class='form-actions'>
  <% if @slide.isNew(): %>
  <a id='submit' href='#' class='btn btn-primary bb-create'>Create</a>
  <% else: %>
  <a id='submit' href='#' class='btn btn-primary bb-update'>Update</a>
  <% end %>
</div>